            <SidebarNav
                onToggleView={showMap}
                view="city"
                onOpenReports={() => openModal('reports')}
                onOpenAlliance={handleOpenAlliance}
                onOpenForum={() => openModal('allianceForum')}
                onOpenMessages={() => openModal('messages')}
